.env.example  # Example Environment Variables for Workspace Security Suite
# Copy this file to .env or .env.production and fill in your actual values

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=debug
APP_NAME=Workspace Security Suite

# Google Workspace API
GOOGLE_WORKSPACE_DOMAIN=example.com
GOOGLE_API_KEY=your_api_key_here
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/workspace_security
DATABASE_POOL_SIZE=10

# SIEM Integration
SIEM_PLATFORM=splunk
SIEM_HOST=localhost
SIEM_PORT=8088
SIEM_TOKEN=your_siem_token

# Security
SECRET_KEY=your_secret_key_here
API_KEY_ROTATION_DAYS=90

# Features
MFA_ENABLED=true
SSL_REQUIRE=false
CACHE_ENABLED=true
BACKUP_ENABLED=true
