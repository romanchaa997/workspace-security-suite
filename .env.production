# Production Environment Variables for Workspace Security Suite
# DO NOT COMMIT ACTUAL VALUES - Use secure secret management

# Application
APP_ENV=production
APP_DEBUG=false
APP_LOG_LEVEL=info

# Google Workspace
GOOGLE_WORKSPACE_DOMAIN=example.com
GOOGLE_API_KEY=${GOOGLE_API_KEY}
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}

# Database
DATABASE_URL=postgresql://user:password@host:5432/workspace_security
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30

# SIEM Integration
SIEM_PLATFORM=splunk
SIEM_HOST=${SIEM_HOST}
SIEM_PORT=8088
SIEM_TOKEN=${SIEM_TOKEN}
SIEM_VERIFY_SSL=true

# Security
SECRET_KEY=${SECRET_KEY}
API_KEY_ROTATION_DAYS=90
MFA_ENABLED=true
SSL_REQUIRE=true

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
LOG_AGGREGATION_ENABLED=true

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=90

# Performance
CACHE_ENABLED=true
CACHE_TTL=3600
REQUEST_TIMEOUT=30
